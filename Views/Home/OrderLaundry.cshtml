@using MvcLaundry.Models
@using Microsoft.EntityFrameworkCore;
@model MvcLaundry.Models.Transaksi
@{
    ViewData["Title"] = "Order - Laundry";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section id="contact" class="contact">
      <div class="container">

        <div class="section-title">
          <h2>Order Laundry</h2>
        </div>

        <div class="row">
          <div class="col-lg-12" data-aos="fade-up" data-aos-delay="300">
            <form asp-action="OrderLaundry" role="form" class="php-email-form">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>

              <div class="row">
                <div class="col-lg-6" data-aos="fade-up">
                  <div class="form-row">
                    <div class="col-lg-6 form-group">
                      <input type="text" asp-for="NamaUser" class="form-control" placeholder="Nama" />
                      <span asp-validation-for="NamaUser" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 form-group">
                      <input type="text" asp-for="NoHPUser" class="form-control"  placeholder="No HP"/>
                      <span asp-validation-for="NoHPUser" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 form-group">
                      <input type="date" asp-for="TglTransaksi" class="form-control"  placeholder="Tanggal Transaksi" />
                      <span asp-validation-for="TglTransaksi" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 form-group">
                      <input type="text" asp-for="TotalTransaksi" class="form-control"  placeholder="Total Transaksi" />
                      <span asp-validation-for="TotalTransaksi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="JenisPakaianId" class="control-label"></label>
                      <select asp-for="JenisPakaianId" class ="form-control" asp-items="ViewBag.JenisPakaianId"></select>
                    </div>
                  </div>
                  <div class="form-group">
                    <textarea asp-for="AlamatUser" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="AlamatUser" class="text-danger"></span>
                  </div>
                  <div class="mb-3">
                    <div class="loading">Loading</div>
                    <div class="error-message"></div>
                    <div class="sent-message">Your message has been sent. Thank you!</div>
                  </div>
                  <div class="text-center"><button type="submit">Order</button></div>
                </div>

                <div class="col-lg-6" data-aos="fade-up">
                  <div class="btn-group">
                    <input type="hidden" asp-for="UserId" class="form-control"  placeholder="Total Transaksi" value='@ViewData["UserId1"]'/>
                      
                    
                    @* @User.Identity.Name
                    @ViewData["UserId1"] *@
                    @* @foreach (var prod in (List<JenisPakaian>)ViewBag.JenisPakaianId) {
                      <input asp-for="UserId" type="radio" class="btn-check" id="prod.Id "autocomplete="off" />
                      <label class="btn btn-secondary" for="option2">Radio</label>
                    } *@
                  </div>
                </div>
              </div>
            </form>
          </div>

        </div>

      </div>
    </section><!-- End Contact Us Section -->

