@model MvcLaundry.Models.JenisPakaian

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-inner">
	<div class="breadcrumbs ace-save-state" id="breadcrumbs">
		<ul class="breadcrumb">
			<li>
				<i class="ace-icon fa fa-home home-icon"></i>
				<a href="#">Home</a>
			</li>
			<li class="active">Dashboard</li>
		</ul><!-- /.breadcrumb -->

		<div class="nav-search" id="nav-search">
			<form class="form-search">
				<span class="input-icon">
					<input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
					<i class="ace-icon fa fa-search nav-search-icon"></i>
				</span>
			</form>
		</div><!-- /.nav-search -->
	</div>

	<div class="page-content">
        <h1>Edit</h1>

        <h4>JenisPakaian</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="NamaPakaian" class="control-label"></label>
                        <input asp-for="NamaPakaian" class="form-control" />
                        <span asp-validation-for="NamaPakaian" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HargaPerKg" class="control-label"></label>
                        <input asp-for="HargaPerKg" class="form-control" />
                        <span asp-validation-for="HargaPerKg" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Simpan" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Kembali</a>
        </div>

	</div><!-- /.page-content -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
